---
import Background from "../../../../public/landing-pages/additional-pro-service/BG.webp";
import CardOne from "../../../../public/landing-pages/additional-pro-service/1.png";
import CardTwo from "../../../../public/landing-pages/additional-pro-service/2.png";
import CardThree from "../../../../public/landing-pages/additional-pro-service/3.png";
import CardFour from "../../../../public/landing-pages/additional-pro-service/4.png";
---

<section
  class="bg-cover bg-center px-7 py-5"
  style={`background-image: url(${Background.src})`}
>
  <div class="flex flex-col gap-3 text-white">
    <div
      class="flex flex-col justify-center items-center gap-1.5 font-mochiy-pop-one font-normal text-white text-2xl"
    >
      <span> ADDITIONAL </span>
      <span> PRO SERVICES </span>
    </div>
    <div class="flex flex-col justify-center items-center gap-1">
      <div>
        <img src={CardOne.src} alt="CardOne" />
      </div>
      <div>
        <img src={CardTwo.src} alt="CardTwo" />
      </div>
      <div>
        <img src={CardThree.src} alt="CardThree" />
      </div>
      <div>
        <img src={CardFour.src} alt="CardFour" />
      </div>
    </div>
  </div>
</section>
