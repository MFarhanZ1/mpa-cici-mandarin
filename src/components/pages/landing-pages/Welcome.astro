---
import Background from "../../../../public/pages/landing-pages/Welcome/BG.webp";
import TextWelcome from "../../../../public/pages/landing-pages/Welcome/Text-Welcome-Cici-Mandarin.png";
import TextWelcomeWeb from "../../../../public/pages/landing-pages/Welcome/Text-Welcome-Cici-Mandarin-Web.png";
import WelcomeImage  from "../../../../public/pages/landing-pages/Welcome/WELCOME.webp";
import PictureMobile from "../../../../public/pages/landing-pages/Welcome/PIC-mobile.webp";
---

<>

<section
  class="bg-cover bg-center pt-14 px-7 block md:hidden"
  style={`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(${Background.src})`}
>
  <div class="flex flex-col gap-3">
    <div>
      <div class="flex justify-center">
        <img src={TextWelcome.src} alt="Welcome" />
      </div>
      <div class="flex justify-center">
        <div class="flex flex-col justify-center items-center">
          <span class="text-white font-extralight">
            Your All-in-One Gateway to China:
          </span>
          <span class="text-white font-bold"> Study, Travel, Work </span>
          <button class="bg-[#FFBC2D] py-1 px-3 rounded-full">
            <span class="text-[#F03C0B] font-bold"> KNOW US MORE ! </span>
          </button>
        </div>
      </div>
    </div>
    <div class="flex justify-center pb-10">
      <div>
        <img src={PictureMobile.src} alt="CardScholarship" />
      </div>
    </div>
  </div>
</section>

<section
  class="bg-cover bg-top px-7 hidden md:block h-screen"
  style={`background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(${Background.src})`}
>
  <div class="flex justify-center items-center h-full px-20">
    <img src={WelcomeImage.src} alt="">
  </div>
</section>
</>
