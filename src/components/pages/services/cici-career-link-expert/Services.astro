---
const background = "/pages/services/cici-career-link-expert/services/background.webp";
const bgMobile = "/pages/services/cici-career-link-expert/services/bg-mobile.png";

// icon
const checklist = "/pages/services/cici-career-link-expert/services/checklist.svg";
const idea = "/pages/services/cici-career-link-expert/services/idea.svg";
const interview = "/pages/services/cici-career-link-expert/services/interview.svg";

// pic service
const service1 = "/pages/services/cici-career-link-expert/services/service-1.webp";
const service2 = "/pages/services/cici-career-link-expert/services/service-2.webp";
const service3 = "/pages/services/cici-career-link-expert/services/service-3.webp";

const services = [
  {
    image: service1,
    icon: checklist,
    title: "Job Board with Listings",
    description: "Browse a wide range of curated job openings in China, from internships to full-time positions.",
  },
  {
    image: service2,
    icon: idea,
    title: "Job Search & Hiring Tips",
    description: "Access expert tips and guidance to help you stand out and get hired by companies in China.",
  },
  {
    image: service3,
    icon: interview,
    title: "CV & Interview Preparation",
    description: "Get support with crafting a strong CV & preparing for job interviews to boost your success.",
  },
];
---

<section class="relative overflow-hidden -mt-4">
  <!-- Mobile Background -->
  <img src={bgMobile} alt="Background" class="w-full h-auto block lg:hidden" />

  <!-- Desktop Background -->
  <div class="absolute inset-0 hidden lg:block" style={`background-image: url(${background}); background-size: cover; background-position: center; filter: brightness(0.5);`}></div>

  <!-- Content Container -->
  <div class="absolute inset-0 lg:relative flex flex-col items-center justify-center px-4 md:px-8 lg:px-12 py-8 md:py-10 lg:min-h-screen">
    <h2 class="font-mochiy-pop-one text-3xl md:text-4xl lg:text-5xl text-white mb-6 md:mb-8 text-center tracking-wider text-outline-orange hidden lg:block">SERVICES</h2>
    <div class="hidden lg:grid grid-cols-3 gap-6 max-w-5xl w-full">
      {
        services.map((service, index) => (
          <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl max-w-xs mx-auto w-full flex flex-col">
            <div class="relative h-36 overflow-hidden rounded-t-3xl">
              <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
            </div>
            <div class="flex justify-center -mt-10 relative z-10">
              <div class="bg-linear-to-b from-[#EE770E] to-[#E14A25] rounded-full p-4 shadow-lg">
                <img src={service.icon} alt={`${service.title} icon`} class="w-10 h-10" />
              </div>
            </div>
            <div class="px-5 pb-6 pt-4 text-center grow flex flex-col">
              <h3 class="text-base font-bold text-[#934935] mb-3 leading-snug">{service.title}</h3>
              <p class="text-base text-[#934935] leading-relaxed">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
