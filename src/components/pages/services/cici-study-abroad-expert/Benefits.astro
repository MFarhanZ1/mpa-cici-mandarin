---
const background = "/pages/services/cici-study-abroad-expert/benefits/background.webp";
const benefit1 = "/pages/services/cici-study-abroad-expert/benefits/benefit-1.webp";
const benefit2 = "/pages/services/cici-study-abroad-expert/benefits/benefit-2.webp";
const benefit3 = "/pages/services/cici-study-abroad-expert/benefits/benefit-3.webp";
const benefit4 = "/pages/services/cici-study-abroad-expert/benefits/benefit-4.webp";
---

<section class="relative w-full bg-right bg-no-repeat overflow-hidden -mt-5 -z-2">
  <img src={background} alt="Benefits background" class="w-full h-auto block" />

  <div class="absolute inset-0 container mx-auto max-w-7xl h-full flex flex-col items-center justify-start pt-20">
    <div class="mb-16">
      <h2 class="text-5xl font-bold drop-shadow-lg font-mochiy-pop-one text-outline-blue">BENEFITS</h2>
    </div>

    <div class="flex gap-6 items-center justify-center px-8">
      <div class="relative w-64 h-auto rounded-3xl overflow-hidden shadow-2xl group cursor-pointer transform transition-transform duration-300 hover:scale-105 border-3 border-white">
        <img src={benefit1} alt="Flexible Programs" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 h-1/2 bg-linear-to-t via-[#2666D4] from-[#0B2552] to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-white text-center">
          <h3 class="text-lg font-bold mb-3">Flexible Programs</h3>
          <p class="text-sm leading-relaxed">Choose online, offline classes or company training, tailored to your or your schedule.</p>
        </div>
      </div>

      <div class="relative w-64 h-auto rounded-3xl overflow-hidden shadow-2xl group cursor-pointer transform transition-transform duration-300 hover:scale-105 border-3 border-white">
        <img src={benefit2} alt="Experienced Instructors" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 h-1/2 bg-linear-to-t via-[#2666D4] from-[#0B2552] to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-white text-center">
          <h3 class="text-lg font-bold mb-3">Experienced Instructors</h3>
          <p class="text-sm leading-relaxed">Learn from native speakers with real-life teaching in China for authentic, effective learning.</p>
        </div>
      </div>

      <div class="relative w-64 h-auto rounded-3xl overflow-hidden shadow-2xl group cursor-pointer transform transition-transform duration-300 hover:scale-105 border-3 border-white">
        <img src={benefit3} alt="Multilingual Support" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 h-1/2 bg-linear-to-t via-[#2666D4] from-[#0B2552] to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-white text-center">
          <h3 class="text-lg font-bold mb-3">Multilingual Support</h3>
          <p class="text-sm leading-relaxed">Classes in Mandarin, Bahasa Indonesian, English, and Chinese for smooth learning.</p>
        </div>
      </div>

      <div class="relative w-64 h-auto rounded-3xl overflow-hidden shadow-2xl group cursor-pointer transform transition-transform duration-300 hover:scale-105 border-3 border-white">
        <img src={benefit4} alt="Multilingual Support" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 h-1/2 bg-linear-to-t via-[#2666D4] from-[#0B2552] to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 text-white text-center">
          <h3 class="text-lg font-bold mb-3">Multilingual Support</h3>
          <p class="text-sm leading-relaxed">Classes in Mandarin, Bahasa Indonesian, English, and Chinese for smooth learning.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute inset-x-0 bottom-0 h-20 shadow-2xl pointer-events-none"></div>
</section>
