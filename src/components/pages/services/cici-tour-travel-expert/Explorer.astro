---
const background = "/pages/services/cici-tour-travel-expert/explorer/background.webp";
---

<section class="relative w-full overflow-hidden -mt-6 -z-4">
  <img src={background} alt="Roadmap background" class="w-full h-auto block" />

  <div class="absolute inset-0 px-2 md:px-4 lg:px-8 py-8 md:py-12 flex items-center justify-center -ml-164">
    <div class="flex flex-col items-center">
      <h1 class="text-2xl md:text-3xl lg:text-6xl font-bold text-white tracking-wide font-mochiy-pop-one text-outline-cyan mb-4 text-center">
        <span>EXPLORERS</span><br /><span class="mt-2 md:mt-4 block">JOURNEY</span>
      </h1>
      <div class="bg-linear-to-r from-[#18C3AC] to-[#0E8E7D] rounded-2xl px-2 md:px-3 py-2 md:py-3 w-fit">
        <h2 class="text-lg md:text-2xl lg:text-3xl font-bold text-white tracking-wide font-mochiy-pop-one">IN CHINA</h2>
      </div>
    </div>
  </div>
</section>
