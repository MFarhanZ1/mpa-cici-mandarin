---
const background = "/pages/services/cici-tour-travel-expert/services/background.webp";
// icon
const dimsum = "/pages/services/cici-tour-travel-expert/services/dimsum.svg";
const itinerary = "/pages/services/cici-tour-travel-expert/services/itinerary.svg";
const maps = "/pages/services/cici-tour-travel-expert/services/maps.svg";
const paifang = "/pages/services/cici-tour-travel-expert/services/paifang.svg";
const resort = "/pages/services/cici-tour-travel-expert/services/resort.svg";
const transport = "/pages/services/cici-tour-travel-expert/services/transport.svg";
// pic service
const service1 = "/pages/services/cici-tour-travel-expert/services/service-1.webp";
const service2 = "/pages/services/cici-tour-travel-expert/services/service-2.webp";
const service3 = "/pages/services/cici-tour-travel-expert/services/service-3.webp";
const service4 = "/pages/services/cici-tour-travel-expert/services/service-4.webp";
const service5 = "/pages/services/cici-tour-travel-expert/services/service-5.webp";
const service6 = "/pages/services/cici-tour-travel-expert/services/service-6.webp";
const services = [
  {
    image: service1,
    icon: itinerary,
    title: "Personalized Itinerary Planning",
    description: "Custom travel plans tailored to your style, interests, and budget â€”no more generic trips!",
  },
  {
    image: service2,
    icon: resort,
    title: "Travel & Stay Booking",
    description: "From flights and transfers to curated stays, we handle it all for a smooth and comfy journey.",
  },
  {
    image: service3,
    icon: paifang,
    title: "Must-See Attractions",
    description: "We include iconic landmarks and hidden gems to make your trip unforgettable.",
  },
  {
    image: service4,
    icon: transport,
    title: "Car Rental & Airport Transfers",
    description: "Arrive in style with private transfers and flexible car rentals to explore at your own pace.",
  },
  {
    image: service5,
    icon: maps,
    title: "Private Tour Guides",
    description: "Explore with expert local guides (Chinese/Indonesian) who bring culture, history, and hidden gems to life.",
  },
  {
    image: service6,
    icon: dimsum,
    title: "Dining Arrangements",
    description: "Savor curated dining experiences tailored to your tastes and dietary needs.",
  },
];
---

<section class="relative w-full overflow-hidden -mt-5 -z-1">
  <div
    class="absolute inset-0"
    style={`background-image: url(${background}); background-size: cover; background-position: center;
filter: brightness(0.5);`}
  >
  </div>

  <div class="relative flex flex-col items-center justify-center px-4 md:px-8 lg:px-12 py-10 md:py-10 mb-4">
    <h2 class="font-mochiy-pop-one text-3xl md:text-4xl lg:text-5xl text-white mb-6 md:mb-8 text-center tracking-wider text-outline-cyan">SERVICES</h2>
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-3 md:gap-6 max-w-5xl w-full">
      {
        services.map((service) => (
          <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl max-w-full md:max-w-xs mx-auto w-full flex flex-col">
            <div class="relative h-28 md:h-36 overflow-hidden rounded-t-3xl">
              <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
            </div>
            <div class="flex justify-center -mt-8 md:-mt-10 relative z-10">
              <div class="bg-linear-to-b from-[#18C3AC] to-[#0E8E7D] rounded-full p-3 md:p-4 shadow-lg">
                <img src={service.icon} alt={`${service.title} icon`} class="w-6 h-6 md:w-10 md:h-10" />
              </div>
            </div>
            <div class="px-3 pb-4 pt-3 md:px-5 md:pb-6 md:pt-4 text-center grow flex flex-col">
              <h3 class="text-xs md:text-base font-bold text-[#206B64] mb-2 md:mb-3 leading-snug">{service.title}</h3>
              <p class="text-[10px] md:text-base text-[#206B64] leading-relaxed">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
