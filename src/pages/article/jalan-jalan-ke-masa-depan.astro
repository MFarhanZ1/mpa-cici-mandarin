const SuzhouImage = "/pages/landing-pages/hottest-news/article/suzhou.png";

// --- Objek artikel diperbarui untuk konten baru ---
const article = {
    topic: "CICIUNBOXCHINA #4",
    title: "JALAN-JALAN KE MASA DEPAN: INI KOTA-KOTA TERCANGGIH DI CHINA!",
    publishDate: "12 Nov 2025",
    author: "Celia Vanessa Hakim",
};
